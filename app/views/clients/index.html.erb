<p style="color: green"><%= notice %></p>

<div class="container mt-5">
  <h2>Lista de Clientes</h2>

  <%= link_to "Agregar Cliente", new_client_path, class: 'btn btn-primary mb-3' %>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Email</th>
        <th>Tel√©fono</th>
        <th>Motocicletas</th>
        <th>Status de Motos</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.id %></td>
          <td><%= "#{client.first_name} #{client.last_name}" %></td>
          <td><%= client.email %></td>
          <td><%= client.phone %></td>
          <td><%= client.motorcycles.count %></td>
          <td>
            <% client.motorcycles.each do |motorcycle| %>
              <p><strong><%= motorcycle.name %>:</strong> <%= motorcycle.status %></p>
            <% end %>
          </td>
          <td>
            <%= link_to 'Seleccionar', client_path(client), class: 'btn btn-outline-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

